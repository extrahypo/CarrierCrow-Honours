<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="small_buttons">
        <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#444444</item>   
   </style>
   
    <style name="large_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#444444</item>   
   </style>
   <style name="large_buttons_nm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#444444</item>   
   </style>
   <style name = "contact_list_name">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">#FFF</item>
       <item name="android:textStyle">bold</item>
       <item name="android:paddingTop">10dp</item>
       <item name="android:textSize">18sp</item>
   </style>
   <style name="activated"></style>
	<style name="paddingTL">
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:paddingTop">5dp</item>
	</style>
		<style name="paddingTR">
	    <item name="android:paddingRight">5dp</item>
	    <item name="android:paddingTop">5dp</item>
	</style>
	
		<!-- Match width wrap height content styles -->
	<style name="match_wrap">
	   <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="match_wrap.EditText">
	   <item name="android:ems">10</item>
	</style>

	<!-- Wrap content styles -->
	<style name="wrap">
	   <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="wrap.speechBubble">
       <item name="android:textColor">@color/black</item>
       <item name="android:textSize">17sp</item>       
	</style>
	<style name="wrap.speechBubble.RightTop">
	    <item name="android:layout_alignParentTop">true</item>
       <item name="android:layout_alignParentRight">true</item>
	</style>
	<style name="wrap.speechBubble.RightBottom">
       <item name="android:layout_alignParentRight">true</item>
	</style>
	<style name="wrap.EditText">
	    <item name="android:ems">10</item>
	</style>
	<style name="wrap.ConvoList">
	    <item name="android:textColor">@color/white</item>
	</style>
	
	<!-- Match content styles -->
	<style name="match">
	   <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
	</style>
   
</resources>
