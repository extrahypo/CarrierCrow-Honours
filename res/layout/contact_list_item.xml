<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey" >
    
    <ImageView
        android:id="@+id/contact_list_image"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/contact"
        android:contentDescription="@string/contact_image"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/contact_list_name"
        style="@style/contact_list_name"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/contact_list_image"
        android:layout_alignTop="@id/contact_list_image" />

    <TextView
        android:id="@+id/contact_list_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_list_image"
        android:layout_below="@id/contact_list_name"
        android:layout_alignLeft="@id/contact_list_name"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/contact_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/contact_list_lname"
        android:layout_alignBaseline="@+id/contact_list_name"
        android:layout_alignBottom="@+id/contact_list_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contact_list_name"
		style="@style/contact_list_name"/>

</RelativeLayout>
